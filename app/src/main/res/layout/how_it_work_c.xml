<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrange">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/how_work_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/how_work_text"
        android:layout_above="@+id/login_text"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        android:layout_marginBottom="10dp"
        android:text="HOW IT WORKS"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_text"
        android:layout_above="@+id/image_center"
        android:layout_alignEnd="@+id/image_center"
        android:layout_alignLeft="@+id/image_center"
        android:layout_alignRight="@+id/image_center"
        android:layout_alignStart="@+id/image_center"
        android:text="The more you communicate, the more flower is nurtured,unlocking connection bulding"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_center"
        android:layout_centerInParent="true"
        android:src="@drawable/image3"/>

    <ImageView
        android:id="@+id/phone_login_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image_center"
        android:layout_alignStart="@+id/image_center"
        android:layout_below="@+id/image_center"
        android:layout_marginTop="10dp"
        android:src="@drawable/loginphone" />

    <ImageView
        android:id="@+id/fb_login_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/phone_login_img"
        android:layout_alignStart="@+id/phone_login_img"
        android:layout_below="@+id/phone_login_img"
        android:src="@drawable/loginfb" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lock_fb_text"
        android:layout_alignLeft="@+id/fb_login_img"
        android:layout_alignStart="@+id/fb_login_img"
        android:layout_below="@+id/fb_login_img"
        android:drawableLeft="@drawable/lock"
        android:layout_marginTop="10dp"
        android:text="This doesnt allow to post on facebook"
        android:textColor="#FFFFFF"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/terms_condition_text"
        android:layout_below="@+id/lock_fb_text"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="By use this app you agree to terms and condition"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

</RelativeLayout>