<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrange">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/how_work_text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/how_work_text"
        android:layout_above="@+id/login_text"
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        android:layout_marginBottom="10dp"
        android:text="HOW IT WORKS"
        android:gravity="center"/>

    <TextView
        android:id="@+id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_center"
        android:layout_alignEnd="@+id/image_center"
        android:layout_alignLeft="@+id/image_center"
        android:layout_alignRight="@+id/image_center"
        android:layout_alignStart="@+id/image_center"
        android:gravity="center"
        android:text="Once you find someone special, message them to plant the seed that you will grow into a relationship ."
        android:textColor="#FFFFFF"
        android:textSize="18dp" />

    <View
        android:layout_width=".05dp"
        android:layout_height="0.5dp"
        android:id="@+id/view_center"
        android:layout_centerInParent="true">
    </View>

    <ImageView
        android:id="@+id/image_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/image2" />



</RelativeLayout>